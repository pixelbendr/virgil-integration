<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/md_grey_200"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.psyphertxt.android.cyfa.ui.activity.ChatActivity">

    <RelativeLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:paddingBottom="24dp">

        <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/user_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="13dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/material_design_16"
                android:layout_marginRight="@dimen/material_design_16"
                android:src="@drawable/ic_dp_default"
                app:siBorderColor="?attr/colorPrimary"
                />

        <TextView
                android:id="@+id/text_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_below="@id/user_image"
                android:fontFamily="@string/font_regular"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="Emma Dean"/>

        <cyd.awesome.material.AwesomeText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:layout_alignBaseline="@+id/text_username"
                android:layout_toRightOf="@+id/text_username"
                android:layout_toEndOf="@+id/text_username"
                android:textSize="13sp"
                android:textColor="@color/ghost_white"
                android:fontFamily="@string/font_light"
                app:awesome_font="material_design"
                app:awesome_icon="MD_CREATE"/>

        <TextView
                android:id="@+id/text_status_message"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/material_design_16"
                android:layout_marginLeft="@dimen/material_design_16"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/text_username"
                android:fontFamily="@string/font_light"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="Could I any way get rid of the dangerous liabilities which the hempen bond entailed."/>


        <cyd.awesome.material.AwesomeText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_close_button"
                android:textSize="14sp"
                android:paddingTop="6dp"
                android:paddingLeft="@dimen/material_design_16"
                android:paddingRight="@dimen/material_design_16"
                android:paddingEnd="@dimen/material_design_16"
                android:paddingBottom="@dimen/material_design_16"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:fontFamily="@string/font_light"
                android:layout_alignParentEnd="true"
                app:awesome_font="font_awesome"
                app:awesome_icon="FA_CHEVRON_DOWN"/>


        <cyd.awesome.material.AwesomeText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="12sp"
                android:paddingTop="6dp"
                android:paddingLeft="@dimen/material_design_16"
                android:paddingRight="@dimen/material_design_16"
                android:paddingEnd="@dimen/material_design_16"
                android:textColor="@android:color/white"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="@string/font_light"
                app:awesome_font="font_awesome"
                app:awesome_icon="FA_CHEVRON_DOWN"/>

        <TextView
                android:id="@+id/textusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_below="@id/text_username"
                android:fontFamily="@string/font_regular"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="Emma Dean"/>

    </RelativeLayout>


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/badge_card_view"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_below="@+id/linear_layout"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="3dp"
            android:layout_marginStart="@dimen/material_design_12"
            android:layout_marginLeft="@dimen/material_design_12"
            android:layout_marginEnd="@dimen/material_design_12"
            android:layout_marginRight="@dimen/material_design_12">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:orientation="horizontal">


            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <TextView
                        android:id="@+id/text_points_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_regular"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/greyish_brown"
                        android:textSize="24sp"
                        android:text="@string/default_point_text"/>

                <TextView
                        android:id="@+id/text_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_regular"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="13sp"
                        android:text="Points"/>

            </LinearLayout>


            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <TextView
                        android:id="@+id/text_badge_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_regular"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/greyish_brown"
                        android:textSize="24sp"
                        android:text="@string/default_point_text"/>

                <TextView
                        android:id="@+id/text_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_regular"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="13sp"
                        android:text="Badges"/>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:id="@+id/media_card_view"
            android:layout_below="@+id/badge_card_view"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="3dp"
            android:layout_marginStart="@dimen/material_design_12"
            android:layout_marginLeft="@dimen/material_design_12"
            android:layout_marginEnd="@dimen/material_design_12"
            android:layout_marginRight="@dimen/material_design_12">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <TextView
                        android:id="@+id/text_photos_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_regular"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="24sp"
                        android:text="@string/default_point_text"/>

                <TextView
                        android:id="@+id/text_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_light"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/warm_grey"
                        android:textSize="13sp"
                        android:text="Photos"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <TextView
                        android:id="@+id/text_videos_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_regular"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="24sp"
                        android:text="@string/default_point_text"/>

                <TextView
                        android:id="@+id/text_videos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_light"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/warm_grey"
                        android:textSize="13sp"
                        android:text="Videos"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <TextView
                        android:id="@+id/text_links_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_regular"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="24sp"
                        android:text="@string/default_point_text"/>

                <TextView
                        android:id="@+id/text_links"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_light"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/warm_grey"
                        android:textSize="13sp"
                        android:text="Links"/>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"

            android:id="@+id/action_card_view"
            android:layout_below="@+id/media_card_view"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="3dp"
            android:layout_marginStart="@dimen/material_design_12"
            android:layout_marginLeft="@dimen/material_design_12"
            android:layout_marginEnd="@dimen/material_design_12"
            android:layout_marginRight="@dimen/material_design_12">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/block_linear_layout"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <FrameLayout android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/block_frame_layout"
                             android:background="@drawable/open_circle_fill">

                    <cyd.awesome.material.AwesomeText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:padding="@dimen/material_design_12"
                            android:textColor="@android:color/white"
                            android:fontFamily="@string/font_light"
                            app:awesome_font="material_design"
                            app:awesome_icon="MD_DO_NOT_DISTURB"/>

                </FrameLayout>

                <TextView
                        android:id="@+id/text_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_medium"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/greyish_brown"
                        android:textSize="13sp"
                        android:text="Block"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/groups_linear_layout"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <FrameLayout android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/groups_frame_layout"
                             android:background="@drawable/open_circle_fill">

                    <cyd.awesome.material.AwesomeText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:padding="@dimen/material_design_12"
                            android:textColor="@android:color/white"
                            android:fontFamily="@string/font_light"
                            app:awesome_font="material_design"
                            app:awesome_icon="MD_GROUP"/>

                </FrameLayout>

                <TextView
                        android:id="@+id/text_groups"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_medium"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/greyish_brown"
                        android:textSize="13sp"
                        android:text="Groups"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/call_linear_layout"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <FrameLayout android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/call_frame_layout"
                             android:background="@drawable/open_circle_fill">

                    <cyd.awesome.material.AwesomeText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:padding="@dimen/material_design_12"
                            android:textColor="@android:color/white"
                            android:fontFamily="@string/font_light"
                            app:awesome_font="material_design"
                            app:awesome_icon="MD_PHONE"/>

                </FrameLayout>

                <TextView
                        android:id="@+id/text_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_medium"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/greyish_brown"
                        android:textSize="13sp"
                        android:text="Call"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:visibility="gone"
                          android:id="@+id/private_linear_layout"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <FrameLayout android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/private_frame_layout"
                             android:background="@drawable/open_circle_fill">

                    <ImageView android:layout_width="20dp"
                               android:layout_margin="@dimen/material_design_12"
                               android:layout_height="20dp"
                               android:src="@drawable/ic_private"/>

                </FrameLayout>

                <TextView
                        android:id="@+id/text_private"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_medium"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/greyish_brown"
                        android:textSize="13sp"
                        android:text="Call"/>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:visibility="gone"
            android:id="@+id/user_action_card_view"
            android:layout_below="@+id/media_card_view"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="3dp"
            android:layout_marginStart="@dimen/material_design_12"
            android:layout_marginLeft="@dimen/material_design_12"
            android:layout_marginEnd="@dimen/material_design_12"
            android:layout_marginRight="@dimen/material_design_12">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/block_user_linear_layout"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <FrameLayout android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_gravity="center"
                             android:id="@+id/block_user_frame_layout"
                             android:background="@drawable/open_circle_fill">

                    <cyd.awesome.material.AwesomeText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:padding="@dimen/material_design_12"
                            android:textColor="@android:color/white"
                            android:fontFamily="@string/font_light"
                            app:awesome_font="material_design"
                            app:awesome_icon="MD_DO_NOT_DISTURB"/>

                </FrameLayout>

                <TextView
                        android:id="@+id/text_user_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_medium"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/greyish_brown"
                        android:textSize="13sp"
                        android:text="Blocked"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/groups_user_linear_layout"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <FrameLayout android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_gravity="center"
                             android:id="@+id/groups_user_frame_layout"
                             android:background="@drawable/open_circle_fill">

                    <cyd.awesome.material.AwesomeText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:padding="@dimen/material_design_12"
                            android:textColor="@android:color/white"
                            android:fontFamily="@string/font_light"
                            app:awesome_font="material_design"
                            app:awesome_icon="MD_GROUP"/>

                </FrameLayout>

                <TextView
                        android:id="@+id/text_user_groups"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_medium"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/greyish_brown"
                        android:textSize="13sp"
                        android:text="Groups"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_send_message"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send_message"
            android:layout_below="@+id/linear_layout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="-45dp"
            app:backgroundTint="@color/greyish_brown"
            app:elevation="3sp"
            app:fabSize="normal"/>


</RelativeLayout>
