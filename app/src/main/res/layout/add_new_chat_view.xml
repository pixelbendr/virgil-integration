<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/md_grey_200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_design_12"
        tools:context="com.psyphertxt.android.cyfa.ui.activity.ChatActivity">

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/material_design_16"
                    android:id="@+id/button_relative_layout">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/block_linear_layout"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_private"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/material_design_4"
                        android:layout_marginLeft="@dimen/material_design_4"
                        android:layout_marginRight="@dimen/material_design_4"
                        android:layout_marginStart="@dimen/material_design_4"
                        android:src="@drawable/ic_private"
                        app:backgroundTint="@android:color/black"
                        app:elevation="1sp"
                        />

                <TextView
                        android:id="@+id/text_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_medium"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/greyish_brown"
                        android:textSize="13sp"
                        android:text="Private"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/groups_linear_layout"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/material_design_4"
                        android:layout_marginLeft="@dimen/material_design_4"
                        android:layout_marginRight="@dimen/material_design_4"
                        android:layout_marginStart="@dimen/material_design_4"
                        android:src="@drawable/ic_send_message"
                        app:elevation="1sp"
                        />

                <TextView
                        android:id="@+id/text_groups"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_medium"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/greyish_brown"
                        android:textSize="13sp"
                        android:text="Regular"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/call_linear_layout"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_groups"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/material_design_4"
                        android:layout_marginLeft="@dimen/material_design_4"
                        android:layout_marginRight="@dimen/material_design_4"
                        android:layout_marginStart="@dimen/material_design_4"
                        android:src="@drawable/ic_add_friends"
                        app:elevation="1sp"
                        />

                <TextView
                        android:id="@+id/text_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_medium"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/greyish_brown"
                        android:textSize="13sp"
                        android:text="Groups"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:visibility="gone"
                          android:id="@+id/private_linear_layout"
                          android:paddingLeft="@dimen/material_design_16"
                          android:paddingTop="@dimen/material_design_12"
                          android:paddingBottom="@dimen/material_design_12"
                          android:paddingStart="@dimen/material_design_16"
                          android:paddingRight="@dimen/material_design_16"
                          android:paddingEnd="@dimen/material_design_16">

                <FrameLayout android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/private_frame_layout"
                             android:background="@drawable/open_circle_fill">

                    <ImageView android:layout_width="20dp"
                               android:layout_margin="@dimen/material_design_12"
                               android:layout_height="20dp"
                               android:src="@drawable/ic_private"/>

                </FrameLayout>

                <TextView
                        android:id="@+id/text_private"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_medium"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/greyish_brown"
                        android:textSize="13sp"
                        android:text="Call"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/button_relative_layout"
                    android:layout_marginBottom="@dimen/material_design_16">
        <TextView
                android:id="@+id/text_phone_number_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginEnd="@dimen/resend_text_spacing"
                android:layout_marginLeft="@dimen/material_design_16"
                android:layout_marginRight="@dimen/resend_text_spacing"
                android:layout_marginStart="@dimen/material_design_16"
                android:text="@string/new_chat_title_text"
                />
        <cyd.awesome.material.AwesomeText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingTop="6dp"
                android:paddingLeft="@dimen/material_design_16"
                android:paddingRight="@dimen/material_design_16"
                android:paddingEnd="@dimen/material_design_16"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:fontFamily="@string/font_light"
                android:layout_alignParentEnd="true"
                app:awesome_font="font_awesome"
                app:awesome_icon="FA_CHEVRON_DOWN"/>
    </RelativeLayout>


</RelativeLayout>
